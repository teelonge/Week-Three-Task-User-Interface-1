<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Week3TaskUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Removes the actionBar and title from the top of the screen. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Changes the text color, text size, text appearance, font family and text style
            of all text fields present in the application in night mode. -->
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>

        <!-- Changes the color of the rating stars in night mode. -->
        <item name="android:progressTint">@color/red</item>
    </style>
</resources>